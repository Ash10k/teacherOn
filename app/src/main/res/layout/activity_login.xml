<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/morelightBlue"
    tools:context=".Login">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/morelightBlue"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Welcome text section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="60dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dancing_script_bold"
                        android:text="Welcome"
                        android:textColor="@color/blue"
                        android:textSize="42sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/dm_sans"
                        android:text="Sign in to continue"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>

                <!-- Inputs -->
                <LinearLayout
                    android:id="@+id/mk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:orientation="vertical">

                    <!-- Email Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textColor="@color/black"
                        android:fontFamily="@font/dm_sans_bold"
                        android:textSize="16sp" />

                    <!-- Email Field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_input_background"
                        android:paddingStart="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_email_24" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:hint="Email Address"
                            android:background="@null"
                            android:textSize="16sp"
                            android:fontFamily="@font/dm_sans" />
                    </LinearLayout>

                    <!-- Password Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Password"
                        android:textColor="@color/black"
                        android:fontFamily="@font/dm_sans_bold"
                        android:textSize="16sp" />

                    <!-- Password Field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_input_background"
                        android:paddingStart="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_lock_outline_24" />

                        <EditText
                            android:id="@+id/password"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:hint="Enter your password"
                            android:background="@null"
                            android:fontFamily="@font/dm_sans"
                            android:textSize="16sp"
                            android:inputType="textPassword" />
                    </LinearLayout>

                    <!-- Forgot password -->
                    <TextView
                        android:id="@+id/forgotpagelink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="end"
                        android:text="Forgot Password?"
                        android:textColor="@color/blue"
                        android:textSize="14sp"
                        android:fontFamily="@font/dm_sans" />
                </LinearLayout>

                <!-- Sign In Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/blue">

                    <RelativeLayout
                        android:id="@+id/loginpage"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Sign In"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/dm_sans_bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Sign up text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't have an account?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/dm_sans" />

                    <TextView
                        android:id="@+id/signuplink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Sign Up"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:fontFamily="@font/dm_sans_bold" />
                </LinearLayout>





                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center">

                    <!-- Blue Line Background -->
                    <View
                        android:layout_width="120dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:background="@drawable/blue_rounded_line" />

                    <!-- Illustration Overlapping Above -->
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="-10dp"
                        android:src="@drawable/mnimg" />
                </FrameLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>